@page "/"
@inject BackendHttpClient BackendHttpClient
@inject Currenty Currenty

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-primary" @onclick="changeCurrenty">Click me</button>

@code {
    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Hello, world!");
        Console.WriteLine(BackendHttpClient.httpClient.BaseAddress);
    }

    private async void changeCurrenty()
    {
        Currenty.Name = "lolololol";
        Currenty.NotifyStateChanged();
    }

}
